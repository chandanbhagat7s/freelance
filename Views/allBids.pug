extends home
block content   

    div(class="grid grid-cols-1 lg:grid-cols-2 gap-4 pt-5 pb-20")
    if (bids)
        each b in bids
            <div class=" rounded overflow-hidden shadow-lg my-3 ">
            <img class="w-20 h-20" src="https://media.istockphoto.com/id/1495088043/vector/user-profile-icon-avatar-or-person-icon-profile-picture-portrait-symbol-default-portrait.jpg?s=612x612&w=0&k=20&c=dhV2p1JwmloBTOaGAtaA3AW1KSnjsdMt7-U_3EZElZ0=" alt="Sunset in the mountains">
            <div class="px-6 py-4">
                <div class="font-bold text-xl mb-2">
                span=`Contact the freelancer and continue your work task there`
                </div>
                <div class=" text-xl mb-2"> Name : 
                span(class="font-bold")=`${b.userId.userName}`
                </div>
                <div class=" text-xl mb-2">
                span=`${b.userId.phone}`
                </div>
                <div class=" text-xl mb-2">
                span=`${b.userId.email}`
                </div>
                <p class="text-gray-700 text-base">
                 span=`${b.freeDesc}`
                </p>
            </div>
            <div class="px-6 pt-4 pb-2">
                <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"> Price </span>
                <span class="inline-block bg-gray-700 text-white  rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">
                    span=`${b.freePrice}`
                </span>
                 
            </div>
            </div>

       










