extends home
block content   
    .flex.min-h-screen.flex-col.items-center.justify-center(class='')
        .w-full.max-w-md.rounded-lg.p-8.text-white(class='bg-gray-500 py-5')
            h1.text-center.text-4xl.font-bold Request Project
            p.mt-2.text-center Please Enter the Details to Get the Project
            form.mt-8.space-y-6(id="requestProjectForm")
                .flex.items-center.space-x-2
                    p.p-2 Your Price
                    input.flex.h-10.text-sm.ring-offset-background.w-full.rounded-md.border-2.border-gray-300.bg-transparent.py-2.px-4.leading-tight.text-white.placeholder-gray-300(class='file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500', placeholder='in Rs.', type='text' id="freePrice" required)
                .flex.items-center.space-x-2
                    p.p-2 Your Deadline
                    input.flex.h-10.text-sm.ring-offset-background.w-full.rounded-md.border-2.border-gray-300.bg-transparent.py-2.px-4.leading-tight.text-white.placeholder-gray-300(class='file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500', placeholder='12/12/2002', type='text' id="freeDeadlin" required)
                .flex.items-center.space-x-2
                    p.p-2 Description
                    textarea.flex.h-44.text-sm.ring-offset-background.w-full.rounded-md.border-2.border-gray-300.bg-transparent.py-2.px-4.leading-tight.text-white.placeholder-gray-300(class='file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500', placeholder='Enter Your Contact Information ... and other details .. if assigner likes it he/she will contact you', type='text' id="freeDesc" required)
                div(class="flex flex-col w-full space-y-2 justify-evenly ")
                    button.inline-flex.items-center.justify-center.whitespace-nowrap.text-sm.ring-offset-background.transition-colors.h-10.w-full.rounded-md.bg-black.text-white.py-2.px-4.font-semibold.text-black(class='focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-dark/90' type="submit" id="") | Request for Project

